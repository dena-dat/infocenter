name: Run KWW Google Scrape

permissions:
  contents: write

on:
  schedule:
    # Runs at 00:00 on the 1st of every month
    - cron: "0 0 1 * *"
  workflow_dispatch: # allows you to trigger manually if needed

jobs:
  run-notebook:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: "3.12"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install notebook nbconvert jupyter pymupdf==1.26.4 requests==2.32.4 beautifulsoup4==4.13.5 google-api-python-client==2.179.0 readability-lxml==0.8.4.1
          # add other dependencies your notebook needs, e.g.:
          pip install pandas requests 

      - name: Run notebook
	env:
        google_api_secret: ${{ secrets.GOOGLE_API_SECRET }}
	google_search_id: ${{ secrets.GOOGLE_SEARCH_ID }}
        run: |
          jupyter nbconvert --to notebook --execute KWW_GoogleSuche_Github.ipynb --stdout
      - name: Commit and push any changes
      	run: |-
          git config user.name "Automated"
          git config user.email "actions@users.noreply.github.com"
          git add -A
          timestamp=$(date -u)
          git commit -m "Latest data: ${timestamp}" || exit 0
          git push
